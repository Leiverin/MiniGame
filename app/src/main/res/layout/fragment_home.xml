<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/bg_home"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imgBgScore"
            android:layout_width="@dimen/_142sdp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintDimensionRatio="286:118"
            android:src="@drawable/ic_frame_score_home"
            />
        
        <TextView
            android:id="@+id/tvLevelCurrent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/color_0000ff"
            app:layout_constraintStart_toStartOf="@+id/imgBgScore"
            app:layout_constraintBottom_toBottomOf="@+id/imgBgScore"
            app:layout_constraintTop_toTopOf="@id/imgBgScore"
            app:layout_constraintEnd_toEndOf="@id/imgBgScore"
            android:gravity="center"
            android:textSize="@dimen/_24ssp"
            tools:text="1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_122sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBgScore"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_32sdp"
            android:src="@drawable/ic_tv_title"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.43" />

        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="@dimen/_122sdp"
            android:layout_height="@dimen/_42sdp"
            android:src="@drawable/ic_btn_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gl1"
            />
        <ImageView
            android:id="@+id/btnAddCoin"
            android:layout_width="@dimen/_128sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPlay"
            android:src="@drawable/ic_btn_make_ruby"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_16sdp"
            >
            <ImageView
                android:id="@+id/btnSound"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:src="@drawable/ic_sound_on"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/btnInfo"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:src="@drawable/ic_info"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_16sdp"
                />
            <ImageView
                android:id="@+id/btnEmail"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:src="@drawable/ic_email"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_16sdp"
                />
            <ImageView
                android:id="@+id/btnUser"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:src="@drawable/ic_user"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_16sdp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>