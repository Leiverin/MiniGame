<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_win"/>

        <TextView
            android:id="@+id/tvCongratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúc mừng"
            android:textSize="@dimen/_32sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/color_0000ff"
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã tìm ra đáp án"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCongratulation"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="#0A4E05"
            android:fontFamily="@font/inter_bold"
            />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hehe"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDes"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="#D1119A"
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/tvDes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn được tặng: +12 Ruby"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResult"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="#B5117E"
            android:fontFamily="@font/inter_bold"
            />

        <ImageView
            android:id="@+id/btnAgain"
            android:layout_width="@dimen/_162sdp"
            android:layout_height="@dimen/_62sdp"
            android:src="@drawable/ic_btn_continue"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDes2"
            android:layout_marginTop="@dimen/_82sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>